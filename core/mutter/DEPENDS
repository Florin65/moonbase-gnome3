depends libSM
depends gsettings-desktop-schemas
depends startup-notification
depends libxkbcommon
depends gnome-settings-daemon

optional_depends wayland-protocols \
                 "-Dwayland=true" \
                 "-Dwayland=false -Dcore_tests=false" \
                 "for Wayland support"

optional_depends gobject-introspection \
                 "-Dintrospection=true" \
                 "-Dintrospection=false" \
                 "Enable introspeciton support. Gnome shell requires mutter with introspection support enabled" \
                 y

optional_depends libwacom \
                 "-Dlibwacom=true" \
                 "-Dlibwacom=false" \
                 "Enable wacom support"


if in_depends $MODULE "wayland-protocols"; then
depends mesa-lib
else
optional_depends mesa-lib \
                 "-Degl=true" \
                 "-Degl=false -Dglx=false" \
                 "Enable EGL support" \
                 y
fi
