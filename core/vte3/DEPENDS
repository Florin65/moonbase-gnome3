depends pcre2
depends gtk+-3
depends vala
depends intltool
depends meson

optional_depends gnutls \
                 "-Dgnutls=true" \
                 "-Dgnutls=false" \
                 "for GNUTLS support"

optional_depends fribidi \
                 "-Dfribidi=true" \
                 "-Dfribidi=false" \
                 "for bidirectional text support"

optional_depends gtk-doc \
                 "-Ddoc=true" \
                 "-Ddoc=false" \
                 "for building documentation" \
                 "n"

optional_depends gobject-introspection \
                 "-Dgir=true" \
                 "-Dgir=false" \
                 "for object introspection" \
                 "y"

