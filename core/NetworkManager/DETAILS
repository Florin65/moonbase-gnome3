          MODULE=NetworkManager
         VERSION=1.0.8
          SOURCE=$MODULE-$VERSION.tar.xz
      SOURCE_URL=$GNOME_URL/sources/$MODULE/${VERSION::3}
      SOURCE_VFY=sha256:8bb128950f8a79ff881afadb46dd55e16f952390cf7cb4e06063431e5144937f
