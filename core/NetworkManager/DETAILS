          MODULE=NetworkManager
         VERSION=1.10.0
          SOURCE=$MODULE-$VERSION.tar.xz
      SOURCE_URL=$GNOME_URL/sources/$MODULE/${VERSION::3}
      SOURCE_VFY=sha256:625e2eb36386dcae599075226200140d010f213b47f7202d83b3b1a202029212
        WEB_SITE=http://gnome.org/projects/$MODULE
         ENTERED=20130216
